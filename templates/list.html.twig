{% extends "master.html.twig" %}

{% block content %}
    <form method="post" id="searchBox" padding-bottom="10px">
    Symbol: <input type="text"  name="symbol" placeholder="Symbol">
    <input type="submit"  class="btn" value="Get Quote">
</form>
    <div class="card mb-3" padding-left="10%">
                        <div class="card-header">
                    <i class="fa fa-table"></i> Stock List
                </div>
        <div class="list-task">
            <form method="post" >
                <div class="card-block">
                <div class="table-responsive">
                    <table class="table table-striped thead-default"  width="100%" id="dataTable" cellspacing="0">
                        <thead class="thead-inverse" >
                            <tr>
                        <th>Symbol</th>
                        <th>Name</th>
                        <th>Bid</th>
                        <th>Ask</th>
                        <th>Open</th>
                        <th>Prev Close</th>
                        <th>Last Trade</th>
                        <th>High</th>
                        <th>Low</th>
                        <th>Volume</th>
                        <th>High 52</th>
                        <th>Low 52</th>
                        <th>Action</th>
                        </tr>
                        </thead>
                        <tfoot class="thead-inverse">
                            <tr>
                        <th>Symbol</th>
                        <th>Name</th>
                        <th>Bid</th>
                        <th>Ask</th>
                        <th>Open</th>
                        <th>Prev Close</th>
                        <th>Last Trade</th>
                        <th>High</th>
                        <th>Low</th>
                        <th>Volume</th>
                        <th>High 52</th>
                        <th>Low 52</th>
                        <th>Action</th>
                        </tr>
                        </tfoot>
                        
                            <tbody>
                                {% for t in symbols %}
                                <tr>
                                    <td >{{ t.symbol }}</td>
                                    <td>{{ t.name }}</td>
                                    <td>{{ t.bid }}</td>
                                    <td>{{ t.ask }}</td>
                                    <td>{{ t.open }}</td>
                                    <td>{{ t.previousClose }}</td>
                                    <td>{{ t.lastTrade }}</td>
                                    <td>{{ t.high }}</td>
                                    <td>{{ t.low }}</td>
                                    <td>{{ t.volume }}</td>
                                    <td>{{ t.high52 }}</td>
                                    <td>{{ t.low52 }}</td>
                                    <td><a href="/buysellstcok/{{t.id}}">buy/sell </a>
                                </tr>
                                {% endfor %}
                            </tbody>
                        
                    </table>
                </div>
                    </div>
                <div class="list-task-footer">
                    <div class ="error-message">

                    </div>
                    <button type="submit" class="btn btn--right"><a href="/add" class='btn--no--underline'>Add Task</a></button>
                </div>
            </form>    
        </div>
    </div>

{% endblock %}
