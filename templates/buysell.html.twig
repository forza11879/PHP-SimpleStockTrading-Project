{% extends "master.html.twig" %}


{% block content %}
    
    {% if sessionUser %}
        <p>Hello {{sessionUser.name}} ({{sessionUser.email}}).
            You may <a href="/logout">logout</a>.</p>
        {% else %}
        <p>You may <a href="/login">login</a> or <a href="/register">register</a>.</p>
    {% endif %}

 <div class="card mb-3" padding-left="10%">
 <p>{{t.id}} : {{t.name}} priced at {{t.ask}}</p>
 </div>
 
 
<form method="post">
    Qty: <input type="number" min="0" value="100" step="1" name="qty"><br>
    <input type="submit" value="buy">
</form>

{% endblock %}