{% extends "master.html.twig" %}
{% block pageheader %}{% endblock %}


{% block content %}

    {% if sessionUser %}
        <p>Hello {{sessionUser.name}} ({{sessionUser.email}}).
            You may <a href="/logout">logout</a>.</p>
        {% else %}
        <p>You may <a href="/login">login</a> or <a href="/register">register</a>.</p>
    {% endif %}



    <div class="panel-body">
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h2>Ask: {{t.ask}}</h2>
                        <br>
                        <form method="post">
                            Qty: <input type="number" min="0" value="100" step="1" name="qty"><br>
                            <br>
                            <button type="submit" class="btn btn-primary btn-md">Buy</button>
                        </form>

                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h1>{{t.name}}</h1>
                        <h3>High: {{t.high}}</h3>
                        <h3>Low: {{t.low}}</h3>
                    </div>
                </div>
            </div>  


            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h2>Bid: {{t.bid}}</h2>
                        <br>
                        <form method="post">
                            Qty: <input type="number" min="0" value="100" step="1" name="qty"><br>
                            <br>
                            <button type="submit" class="btn btn-primary btn-md">Sell</button>
                        </form>

                    </div>

                </div>
            </div>
        </div>
    </div>



    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://code.highcharts.com/stock/highstock.js"></script>
    <script src="https://code.highcharts.com/stock/modules/exporting.js"></script>


    <div class="panel-body">

        <div id="container" style="height: 250px; min-width: 310px"></div>
    </div>



    <script>
        $.getJSON('https://www.highcharts.com/samples/data/jsonp.php?a=e&filename=aapl-ohlc.json&callback=?', function (data) {

            // create the chart
            Highcharts.stockChart('container', {

                rangeSelector: {
                    selected: 1
                },

                title: {
                    text: ''
                },

                series: [{
                        type: 'candlestick',
                        name: 'Stock Price',
                        data: data,
                        dataGrouping: {
                            units: [
                                [
                                    'week', // unit name
                                    [1] // allowed multiples
                                ], [
                                    'month',
                                    [1, 2, 3, 4, 6]
                                ]
                            ]
                        }
                    }]
            });
        });

    </script>


{% endblock %}